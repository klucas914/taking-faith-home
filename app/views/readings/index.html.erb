<h1>Taking Faith Home</h1>
<h3>Share | Read | Talk | Pray | Bless</h3>
 
<fieldset>
<table>
  <tr>
    <th>Week</th>
    <th>Day</th>
    <th>Title</th>
  </tr>
 
  <% @readings.each do |reading| %>
    <tr>
      <td><%= reading.week %></td>
      <td><%= reading.date %></td>
      <td><%= reading.title %></td>
      <td><%= link_to 'Begin Faith 5', share_reading_path(reading) %></td>
      <% if session[:user_id] %>
      <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
      <td><%= link_to 'Destroy', reading_path(reading),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
</fieldset>

<% if session[:user_id] %>
<%= link_to 'New Faith5', new_reading_path %>
<% end %>
