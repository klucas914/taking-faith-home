<p>
<fieldset>
<h3><%= link_to "It is the 23rd week after pentecost", weekly_resources_path %></h3>
</fieldset>
<p>
<fieldset>
<table>
  <tr>
    <th>Day</th>
    <th>Title</th>
  </tr>
 
  <% @readings.each do |reading| %>
    <tr>
      <td><%= reading.date %></td>
      <td><%= reading.title %></td>
      <td><%= link_to 'Begin Faith 5', share_reading_path(reading) %></td>
      <% if session[:user_id] %>
      <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
      <td><%= link_to 'Destroy', reading_path(reading),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
</fieldset>

<% if session[:user_id] %>
<%= link_to 'New Faith5', new_reading_path %>
<% end %>

